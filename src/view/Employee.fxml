<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="586.0" prefWidth="971.0" stylesheets="@css/employee.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EmployeeController">
   <top>
      <HBox alignment="CENTER" prefHeight="62.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Employee Management" />
            <TextField fx:id="search" promptText="id" />
            <Button mnemonicParsing="false" onAction="#searchEmployee" text="Search" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TableView fx:id="employeeTable" fixedCellSize="30.0" maxWidth="795.0" minWidth="408.0" prefHeight="463.0" prefWidth="795.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="43.0" resizable="false" text="Id" />
          <TableColumn fx:id="nameColumn" prefWidth="130.0" resizable="false" text="Name" />
            <TableColumn fx:id="positionColumn" prefWidth="164.0" resizable="false" text="Position" />
            <TableColumn fx:id="departmentColumn" prefWidth="140.0" resizable="false" text="Department" />
            <TableColumn fx:id="salaryColumn" prefWidth="104.0" resizable="false" text="Salary" />
            <TableColumn fx:id="statusColumn" prefWidth="110.0" resizable="false" text="Status" />
            <TableColumn fx:id="ratingColumn" prefWidth="94.0" resizable="false" text="Rating" />
        </columns>
      </TableView>
   </center>
   <right>
      <VBox alignment="BASELINE_CENTER" prefHeight="463.0" prefWidth="152.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Name" />
            <TextField fx:id="name" promptText="name" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Position">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>
            <TextField fx:id="position" promptText="position" />
            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="114.0" text="Department">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>
            <ComboBox fx:id="department" prefHeight="40.0" prefWidth="160.0" />
            <Label text="Salary">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin></Label>
            <TextField fx:id="salary" promptText="salary" />
            <Label text="Status">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>
            <CheckBox fx:id="status" mnemonicParsing="false" text="Active" />
            <Label text="Rating">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>
            <Slider fx:id="rating" />
            <Button minHeight="24.0" minWidth="60.0" mnemonicParsing="false" onAction="#addEmployee" prefHeight="44.0" prefWidth="70.0" text="Add" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <bottom>
      <HBox alignment="CENTER" prefHeight="51.0" prefWidth="756.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#updateEmployee" text="Update" />
            <Button mnemonicParsing="false" onAction="#deleteEmployee" text="Delete" />
            <Button mnemonicParsing="false" onAction="#getAllEmployee" text="Show" />
            <Button mnemonicParsing="false" onAction="#goToDashboard" text="Return" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
