<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@css/profile.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfileController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Separator prefWidth="200.0" />
            <Label text="My Profile" />
            <Separator prefWidth="200.0" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="259.0" prefWidth="263.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Separator prefWidth="200.0" />
            <Label text="User ID" />
            <Separator prefWidth="200.0" />
            <Label fx:id="id" text="Label" />
            <Separator prefWidth="200.0" />
            <Label text="Current Username" />
            <Separator prefWidth="200.0" />
            <Label fx:id="userName" text="Label" />
            <Separator prefWidth="200.0" />
            <Label text="Current Password" />
            <Separator prefWidth="200.0" />
            <Label fx:id="password" text="Label" />
            <Separator prefWidth="200.0" />
            <Label text="Created At" />
            <Separator prefWidth="200.0" />
            <Label fx:id="createdAt" text="Label" />
            <Separator prefWidth="200.0" />
            <Label text="Updated At" />
            <Separator prefWidth="200.0" />
            <Label fx:id="updatedAt" text="Label" />
            <Separator prefWidth="200.0" />
         </children>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#removeAccount" text="Remove Account" />
            <Button mnemonicParsing="false" onAction="#returnDashboard" text="Return Dashboard">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <right>
      <VBox alignment="CENTER" prefHeight="201.0" prefWidth="119.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Password Area" />
            <Separator prefWidth="200.0" />
            <TextField fx:id="newPassword" promptText="New Password" />
            <TextField fx:id="confirmNewPassword" minWidth="130.0" prefHeight="38.0" prefWidth="130.0" promptText=" New Password" />
            <Button mnemonicParsing="false" onAction="#changePassword" text="Change " />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <left>
      <VBox alignment="CENTER" minWidth="150.0" prefHeight="319.0" prefWidth="157.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="19.0" prefWidth="200.0" text="Your Daily Notes " />
            <Label text="(Max 1000 characters)" />
            <TextArea fx:id="dailyNotes" prefHeight="164.0" prefWidth="127.0" />
            <Button mnemonicParsing="false" onAction="#saveDailyNotes" text="Save" />
         </children>
      </VBox>
   </left>
</BorderPane>
